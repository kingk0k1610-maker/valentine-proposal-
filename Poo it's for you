<script>
    function moveNo() {
        // Button ko screen ke andar hi rakhne ke liye calculation
        const x = Math.random() * (window.innerWidth - 100);
        const y = Math.random() * (window.innerHeight - 50);
        const noBtn = document.getElementById('noBtn');
        noBtn.style.left = x + 'px';
        noBtn.style.top = y + 'px';
        document.getElementById('msg').innerText = "Ek bar aur socho yar üòÖüíó";
    }

    function ansYes() {
        document.getElementById('mainCard').innerHTML = `
            <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExbmt4M3N4eHh4eHh4eHh4eHh4eHh4eHh4eHh4eHh4eHh4JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZCZjdD1n/K7YND616X70SWYJ252/giphy.gif" class="gif">
            <h1>Yayyy! I knew it Poo! üíñ‚ú®</h1>
            <p>Love you! Best Valentine Ever! üíå</p>
        `;
